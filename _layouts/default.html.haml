!!!5
%html(lang="en")
  %head
    %title #{page.title} | OpenShift Java Client
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="#{page.description}")

    %link(href="../images/favicon.png" rel="shortcut icon")

